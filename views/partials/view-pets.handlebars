<div class="container p-0">
<div class="row">

{{#each pets}}
<div class="col-3 offset-1">
<div class="card" style="width: 18rem;">
  <img src={{pet_picture}} class="card-img-top">
  <div class="card-body">
    <h5 class="card-title">{{pet_name}}</h5>
    <p class="card-text">{{pet_type}}</p>
    <p class="card-text">Size: {{pet_size}}</p>
    <p class="card-text">Age: {{pet_age}}</p>
    <p class="card-text">Breed: {{pet_breed}}</p>
    <p class="card-text">Activity Level: {{activty}}</p>
    <p class="card-text">Allergies: {{hypo}}</p>
    <p class="card-text">Kid friendly: {{kid_friendly}}</p>
  </div>
</div>
</div>
{{/each}}

</div>
</div>